
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            String    @id @default(cuid())
  accountId     String    @unique
  introducerId  String?
  beneficiaryId String?
  balance       Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Self-relations for referral chain
  introducedBy    Account?  @relation("ReferalChain", fields: [introducerId], references: [accountId])
  introducedUsers Account[] @relation("ReferalChain")

}
